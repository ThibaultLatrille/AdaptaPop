issn = {07374038},
journal = {Molecular Biology and Evolution},
keywords = {Bayesian approach,Codon evolution,Markov model,Maximum likelihood,Positive selection},
month = {feb},
number = {2},
pages = {255--271},
publisher = {Oxford Academic},
title = {{Investigating protein-coding sequence evolution with probabilistic codon substitution models}},
url = {https://academic.oup.com/mbe/article/26/2/255/1029542},
volume = {26},
