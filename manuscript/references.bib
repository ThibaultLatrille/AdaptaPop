journal = {Molecular biology and evolution},
keywords = {dirichlet process,epistasis,fitness landscape,markov chain,nearly-neutral evolution},
number = {1},
pages = {204--214},
title = {{Detecting adaptation in protein-coding genes using a Bayesian site- heterogeneous mutation-selection codon substitution model}},
url = {https://doi.org/10.1093/molbev/msw220},
volume = {34},
year = {2016}
}
