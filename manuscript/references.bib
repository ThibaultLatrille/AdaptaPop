issn = {1932-6203},
journal = {PLoS ONE},
keywords = {Gene mapping,Mammals,Molecular evolution,Nucleotide mapping,Phylogenetic analysis,Sequence alignment,Sequence databases,Simulation and modeling},
month = {mar},
