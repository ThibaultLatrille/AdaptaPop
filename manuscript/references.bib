issn = {19432631},
journal = {Genetics},
keywords = {Allelic selection,Boundary mutations,GBGC,GC-bias,Great apes,Moran model},
month = {aug},
number = {4},
pages = {1321--1336},
pmid = {31147380},
publisher = {Genetics Society of America},
title = {{Quantifying GC-biased gene conversion in great ape genomes using polymorphism-aware models}},
url = {https://doi.org/10.1534/genetics.119.302074},
volume = {212},
year = {2019}
}
@article{Boyle2017,
