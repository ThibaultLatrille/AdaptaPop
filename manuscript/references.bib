file = {:home/thibault/.var/app/com.elsevier.MendeleyDesktop/data/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Pollock, Thiltgen, Goldstein - 2012 - Amino acid coevolution induces an evolutionary Stokes shift.pdf:pdf},
