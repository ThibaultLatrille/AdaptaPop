journal = {Theoretical Population Biology},
month = {may},
pages = {73--85},
publisher = {Academic Press},
title = {{Modeling the effect of changing selective pressures on polymorphism and divergence}},
url = {https://www.sciencedirect.com/science/article/pii/S0040580912000962},
volume = {85},
year = {2013}
}
@article{Berezovsky2007,
