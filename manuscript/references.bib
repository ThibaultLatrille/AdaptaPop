editor = {Nachman, Michael W.},
file = {:home/thibault/.var/app/com.elsevier.MendeleyDesktop/data/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Oliver et al. - 2009 - Accelerated Evolution of the Prdm9 Speciation Gene across Diverse Metazoan Taxa.pdf:pdf},
issn = {15537390},
