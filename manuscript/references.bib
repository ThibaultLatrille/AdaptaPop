editor = {Tanentzap, Andrew J.},
file = {:home/thibault/.var/app/com.elsevier.MendeleyDesktop/data/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Upham, Esselstyn, Jetz - 2019 - Inferring the mammal tree Species-level sets of phylogenies for questions in ecology, evolution, and con.pdf:pdf},
issn = {1545-7885},
journal = {PLOS Biology},
month = {dec},
number = {12},
title = {{Inferring the mammal tree: Species-level sets of phylogenies for questions in ecology, evolution, and conservation}},
