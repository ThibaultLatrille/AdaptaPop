doi = {10.1186/s12862-018-1326-7},
file = {:home/thibault/.var/app/com.elsevier.MendeleyDesktop/data/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Dunn et al. - 2019 - Improved inference of site-specific positive selection under a generalized parametric codon model when there are mu.pdf:pdf},
issn = {14712148},
journal = {BMC Evolutionary Biology},
keywords = {Codon frequencies,Codon model,False positives,G-series models,Likelihood ratio test,M-series models,Model misspecification,Multiple nonsynonymous rates,Multiple nucleotide mutations,Positive selection,Protein evolution},
month = {jan},
