keywords = {Epistasis,Fitness landscape,Protein stability},
month = {jun},
number = {24},
pages = {9916--9921},
publisher = {National Academy of Sciences},
title = {{A biophysical protein folding model accounts for most mutational fitness effects in viruses}},
