issn = {14712148},
journal = {BMC Evolutionary Biology},
keywords = {Elastic network model,Flexibility,Local packing density,Mean local mutational stress,Mean square fluctuation,Protein evolution,Site-specific substitution rate,Stress},
month = {apr},
number = {1},
pages = {78},
publisher = {BioMed Central Ltd.},
title = {{A mechanistic stress model of protein evolution accounts for site-specific evolutionary rates and their relationship with packing density and flexibility}},
