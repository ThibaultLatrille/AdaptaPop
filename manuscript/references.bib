doi = {10.1016/j.cub.2017.02.031},
issn = {0960-9822},
journal = {Current Biology},
keywords = {Ctenophora,Eumetazoa,Porifera,animal,evolution,long branch attraction,metazoa,nervous system,phylogenomics,phylogeny},
number = {7},
pages = {958--967},
title = {{A Large and Consistent Phylogenomic Dataset Supports Sponges as the Sister Group to All Other Animals}},
