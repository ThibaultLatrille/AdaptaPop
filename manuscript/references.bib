doi = {10.1093/molbev/msj038},
file = {:home/thibault/.var/app/com.elsevier.MendeleyDesktop/data/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Drummond, Raval, Wilke - 2005 - A Single Determinant Dominates the Rate of Yeast Protein Evolution.pdf:pdf},
